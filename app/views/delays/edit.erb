<% if flash[:error] %>
  <% flash[:error].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for @delay do |f| %>
<%= f.label "Name of Delay" %>
<%= f.text_field :name %>
<%= f.label "Description" %>
<%= f.text_area :description %>
<%= f.label "Subway" %>
<%= f.collection_select :subway, Subway.all, :id, :letter %>
<%= f.submit "Report" %>
<% end %>

<%= link_to "Cancel", delays_path %>
